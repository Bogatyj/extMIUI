<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="lockscreen_dialer_description"
        android:title="@string/lockscreen_dialer"
        android:summary="@string/lockscreen_dialer_description"
        android:enabled="false"
        android:layout="@layout/description_preference_layout"/>

    <SwitchPreferenceCompat
        android:key="lockscreen_dialer"
        android:title="@string/enable"/>

    <Preference
        android:key="lockscreen_dialer_app"
        android:title="@string/select_app"
        android:dependency="lockscreen_dialer"
        android:persistent="false"/>
</PreferenceScreen>